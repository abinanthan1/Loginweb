@model FirstWebApp.Pages.LoginModel
@{
}
<!DOCTYPE html>
<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color:grey;
        }
    .container {
       margin: 0 auto;
      text-align:center;
      padding: 20px;
    }
    h2 {
            text-align:center;
        } 
    .form-group label{
        margin-bottom:2%;
        text-align:left;
    }
    .form-group input {
      margin-left: 0%;
      text-align:center;
      width: 40%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    
    .form-group button {
      margin-left: 25%;
      width: 25%;
      padding: 8px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin:auto;
    }
  </style>
</head>
<body>
  <div class="bg-image">
  <div class="container">
    <h2>Sign in </h2>
    <form>
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>
      <div class="form-group">
        <button type="submit">Login</button>
      </div>
      <div class="form-group">
                Create new account
      </div>
    </form>
    </div>
  </div>
</body>
</html>

